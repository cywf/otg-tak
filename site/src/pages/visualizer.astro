---
import BaseLayout from '../layouts/BaseLayout.astro';
import MermaidViewer from '../components/MermaidViewer';
---

<BaseLayout title="Project Visualizer" description="Interactive Mermaid diagrams showing OTG-TAK architecture, workflows, and data flows">
  <div class="container mx-auto px-4 py-12 max-w-7xl">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">Project Visualizer</h1>
      <p class="text-lg opacity-80">
        Interactive diagrams showcasing the project architecture and workflows
      </p>
    </div>
    
    <MermaidViewer client:load />
  </div>
</BaseLayout>
