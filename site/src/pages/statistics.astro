---
import BaseLayout from '../layouts/BaseLayout.astro';
import StatisticsCharts from '../components/StatisticsCharts';
---

<BaseLayout title="Statistics" description="Repository statistics including stars, forks, watchers, language breakdown, and commit activity">
  <div class="container mx-auto px-4 py-12 max-w-7xl">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">Repository Statistics</h1>
      <p class="text-lg opacity-80">Visual insights into the OTG-TAK project</p>
    </div>
    
    <StatisticsCharts client:load />
  </div>
</BaseLayout>
