---
import BaseLayout from '../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL;
---

<BaseLayout title="404 - Page Not Found" description="The requested page could not be found">
  <div class="hero min-h-[70vh]">
    <div class="hero-content text-center">
      <div class="max-w-2xl">
        <h1 class="text-9xl font-bold text-primary mb-4">404</h1>
        <h2 class="text-4xl font-bold mb-6">Page Not Found</h2>
        <p class="text-xl mb-8 opacity-80">
          The page you're looking for doesn't exist or has been moved.
        </p>
        
        <div class="flex flex-wrap gap-4 justify-center">
          <a href={`${base}/`} class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
            </svg>
            Go Home
          </a>
          <a href={`${base}/docs`} class="btn btn-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
            </svg>
            Browse Docs
          </a>
          <a href={`${base}/visualizer`} class="btn btn-accent">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0118 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1 3m8.5-3l1 3m0 0l.5 1.5m-.5-1.5h-9.5m0 0l-.5 1.5M9 11.25v1.5M12 9v3.75m3-6v6" />
            </svg>
            View Diagrams
          </a>
        </div>

        <div class="divider my-12"></div>

        <div class="text-left">
          <h3 class="text-2xl font-bold mb-4">Quick Links</h3>
          <ul class="menu bg-base-200 rounded-box w-full">
            <li><a href={`${base}/`}>Home</a></li>
            <li><a href={`${base}/statistics`}>Statistics</a></li>
            <li><a href={`${base}/discussions`}>Discussions</a></li>
            <li><a href={`${base}/development-board`}>Development Board</a></li>
            <li><a href={`${base}/create-issue`}>Create Issue</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
