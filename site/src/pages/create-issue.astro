---
import BaseLayout from '../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL;

const issueTypes = [
  {
    title: 'üêõ Bug Report',
    description: 'Report a bug or unexpected behavior',
    url: 'https://github.com/cywf/otg-tak/issues/new?labels=bug&template=bug_report.md&title=%5BBUG%5D+',
    color: 'btn-error',
  },
  {
    title: '‚ú® Feature Request',
    description: 'Suggest a new feature or enhancement',
    url: 'https://github.com/cywf/otg-tak/issues/new?labels=enhancement&template=feature_request.md&title=%5BFEATURE%5D+',
    color: 'btn-primary',
  },
  {
    title: 'üìñ Documentation',
    description: 'Report documentation issues or improvements',
    url: 'https://github.com/cywf/otg-tak/issues/new?labels=documentation&title=%5BDOCS%5D+',
    color: 'btn-info',
  },
  {
    title: '‚ùì Question',
    description: 'Ask a question about the project',
    url: 'https://github.com/cywf/otg-tak/issues/new?labels=question&title=%5BQUESTION%5D+',
    color: 'btn-secondary',
  },
  {
    title: 'üöÄ Deployment Issue',
    description: 'Report issues with deployment or setup',
    url: 'https://github.com/cywf/otg-tak/issues/new?labels=deployment&title=%5BDEPLOY%5D+',
    color: 'btn-warning',
  },
  {
    title: 'üîí Security Concern',
    description: 'Report a security vulnerability (private)',
    url: 'https://github.com/cywf/otg-tak/security/advisories/new',
    color: 'btn-accent',
  },
];
---

<BaseLayout title="Create Issue" description="Create a new issue or report a problem with the OTG-TAK project">
  <div class="container mx-auto px-4 py-12 max-w-5xl">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">Create Issue</h1>
      <p class="text-lg opacity-80">
        Choose the type of issue you want to create
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
      {issueTypes.map((type) => (
        <div class="card bg-base-200 shadow-xl hover:shadow-2xl transition-shadow">
          <div class="card-body">
            <h2 class="card-title text-2xl mb-2">{type.title}</h2>
            <p class="mb-4 opacity-80">{type.description}</p>
            <div class="card-actions justify-end">
              <a 
                href={type.url}
                target="_blank"
                rel="noopener noreferrer"
                class={`btn ${type.color} gap-2`}
              >
                Create
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Alternative: Use Issue Templates -->
    <div class="divider">OR</div>

    <div class="card bg-base-200 shadow-xl">
      <div class="card-body text-center">
        <h2 class="card-title justify-center text-2xl mb-4">Use GitHub Issue Templates</h2>
        <p class="mb-6 opacity-80">
          Browse all available issue templates and choose the most appropriate one
        </p>
        <div class="card-actions justify-center">
          <a 
            href="https://github.com/cywf/otg-tak/issues/new/choose"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary btn-lg gap-2"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            Browse Templates
          </a>
        </div>
      </div>
    </div>

    <!-- Help Section -->
    <div class="mt-12">
      <div class="alert">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-info shrink-0 w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <h3 class="font-bold">Before creating an issue</h3>
          <div class="text-sm">
            Please search existing issues to avoid duplicates. For general questions, 
            consider using <a href="https://github.com/cywf/otg-tak/discussions" target="_blank" rel="noopener noreferrer" class="link">Discussions</a> instead.
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
