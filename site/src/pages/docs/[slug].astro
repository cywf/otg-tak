---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { readFileSync, existsSync } from 'fs';
import { join } from 'path';
import { marked } from 'marked';

export async function getStaticPaths() {
  const docs = ['INSTALL', 'PROJECT_SUMMARY', 'REPO_STRUCTURE', 'CONTRIBUTING'];
  
  return docs.map(doc => ({
    params: { slug: doc },
  }));
}

const { slug } = Astro.params;
const base = import.meta.env.BASE_URL;

// Map slug to actual file name
const fileMap: Record<string, string> = {
  'INSTALL': 'INSTALL.md',
  'PROJECT_SUMMARY': 'PROJECT_SUMMARY.md',
  'REPO_STRUCTURE': 'REPO_STRUCTURE.md',
  'CONTRIBUTING': 'CONTRIBUTING.md',
};

const filename = fileMap[slug as string];
if (!filename) {
  return Astro.redirect(`${base}/404`);
}

const filePath = join(process.cwd(), '..', filename);

let content = '';
let title = slug as string;

try {
  if (existsSync(filePath)) {
    const rawContent = readFileSync(filePath, 'utf-8');
    content = marked(rawContent);
    
    // Extract title from first heading
    const titleMatch = rawContent.match(/^#\s+(.+)$/m);
    if (titleMatch) {
      title = titleMatch[1];
    }
  } else {
    content = `<div class="alert alert-error"><span>Document not found: ${filename}</span></div>`;
  }
} catch (error) {
  content = `<div class="alert alert-error"><span>Error loading document: ${error}</span></div>`;
}

const githubUrl = `https://github.com/cywf/otg-tak/blob/main/${filename}`;
---

<BaseLayout title={title} description={`${title} - OTG-TAK Documentation`}>
  <div class="container mx-auto px-4 py-12 max-w-4xl">
    <!-- Document Header -->
    <div class="mb-8 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
      <div>
        <a href={`${base}/docs`} class="btn btn-ghost btn-sm mb-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
          </svg>
          Back to Docs
        </a>
        <h1 class="text-4xl font-bold">{title}</h1>
      </div>
      <a 
        href={githubUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-primary gap-2"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        Open in GitHub
      </a>
    </div>

    <!-- Document Content -->
    <article class="prose prose-lg max-w-none">
      <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
          <div 
            class="markdown-content"
            set:html={content}
          />
        </div>
      </div>
    </article>
  </div>
</BaseLayout>

<style>
  .markdown-content {
    @apply text-base-content;
  }
  
  .markdown-content :global(h1) {
    @apply text-4xl font-bold mt-8 mb-4 text-primary;
  }
  
  .markdown-content :global(h2) {
    @apply text-3xl font-bold mt-6 mb-3 text-secondary;
  }
  
  .markdown-content :global(h3) {
    @apply text-2xl font-semibold mt-4 mb-2;
  }
  
  .markdown-content :global(h4) {
    @apply text-xl font-semibold mt-3 mb-2;
  }
  
  .markdown-content :global(p) {
    @apply mb-4;
  }
  
  .markdown-content :global(ul),
  .markdown-content :global(ol) {
    @apply ml-6 mb-4;
  }
  
  .markdown-content :global(li) {
    @apply mb-2;
  }
  
  .markdown-content :global(code) {
    @apply bg-base-300 px-2 py-1 rounded text-sm font-mono;
  }
  
  .markdown-content :global(pre) {
    @apply bg-base-300 p-4 rounded-lg overflow-x-auto mb-4;
  }
  
  .markdown-content :global(pre code) {
    @apply bg-transparent p-0;
  }
  
  .markdown-content :global(a) {
    @apply link link-primary;
  }
  
  .markdown-content :global(blockquote) {
    @apply border-l-4 border-primary pl-4 italic my-4;
  }
  
  .markdown-content :global(table) {
    @apply table table-zebra w-full my-4;
  }
  
  .markdown-content :global(img) {
    @apply rounded-lg shadow-lg my-4;
  }
</style>
