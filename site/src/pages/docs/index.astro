---
import BaseLayout from '../../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL;

const docs = [
  {
    title: 'Installation Guide',
    slug: 'INSTALL',
    description: 'Complete installation instructions for Docker Compose, manual setup, and cloud deployment',
  },
  {
    title: 'Project Summary',
    slug: 'PROJECT_SUMMARY',
    description: 'Overview of features, statistics, and implementation details',
  },
  {
    title: 'Repository Structure',
    slug: 'REPO_STRUCTURE',
    description: 'Visual guide to the project organization and directory layout',
  },
  {
    title: 'Contributing Guidelines',
    slug: 'CONTRIBUTING',
    description: 'How to contribute to the OTG-TAK project',
  },
];
---

<BaseLayout title="Documentation" description="Documentation for the OTG-TAK project including installation, usage, and contribution guidelines">
  <div class="container mx-auto px-4 py-12 max-w-5xl">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">Documentation</h1>
      <p class="text-lg opacity-80">
        Complete guides and references for the OTG-TAK project
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
      {docs.map((doc) => (
        <a 
          href={`${base}/docs/${doc.slug}`}
          class="card bg-base-200 shadow-xl hover:shadow-2xl transition-shadow"
        >
          <div class="card-body">
            <h2 class="card-title">{doc.title}</h2>
            <p class="opacity-80">{doc.description}</p>
            <div class="card-actions justify-end mt-4">
              <button class="btn btn-primary btn-sm">
                Read â†’
              </button>
            </div>
          </div>
        </a>
      ))}
    </div>

    <div class="divider">Additional Resources</div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <a 
        href="https://github.com/cywf/otg-tak"
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-outline"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="mr-2">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        GitHub Repo
      </a>
      <a 
        href="https://github.com/cywf/otg-tak/wiki"
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-outline"
      >
        Wiki
      </a>
      <a 
        href={`${base}/visualizer`}
        class="btn btn-outline"
      >
        Diagrams
      </a>
    </div>
  </div>
</BaseLayout>
