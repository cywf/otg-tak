# Environment Configuration Example
# Copy this to .env and update with your values

# API Settings
API_V1_STR=/api
PROJECT_NAME=OTG-TAK

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# Database
DATABASE_URL=sqlite:///./data/otg-tak.db

# Security
SECRET_KEY=change-this-to-a-secure-random-string-in-production

# Deployment Paths
ANSIBLE_PLAYBOOKS_DIR=./ansible/playbooks
TERRAFORM_DIR=./terraform

# TAK Server Configuration
TAK_SERVER_DEFAULT_PORT=8089

# Tailscale Configuration
TAILSCALE_AUTH_KEY=

# Zerotier Configuration
ZEROTIER_NETWORK_ID=
ZEROTIER_API_TOKEN=

# Cloud Provider (for Terraform deployments)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Email for SSL certificates
ACME_EMAIL=admin@example.com

# Domain for TAK server
TAK_DOMAIN=tak.example.com
